<!DOCTYPE html>
<html>
  <head>
    <title>Employee Project List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        text-align: center;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }

      h1 {
        background-color: #66b3e0;
        color: white;
        padding: 10px 0;
      }

      table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
      }

      table,
      th,
      td {
        border: 1px solid #ccc;
      }

      th,
      td {
        padding: 10px;
        text-align: center;
      }

      button {
        background-color: #66b3e0;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
        margin: 10px;
      }

      button:hover {
        background-color: #3385b3;
      }

      a {
        text-decoration: none;
      }

      .add-employee-project-button,
      .back-to-menu-button {
        display: inline-block;
      }
    </style>
  </head>
  <body>
    <h1>Employee Project List</h1>
    <table>
      <thead>
        <tr>
          <th>No</th>
          <th>Project ID</th>
          <th>User ID</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% let counter = 1; %> <% employeeProjects.forEach((employeeProject) => { %>
        <tr>
          <td><%= counter++ %></td>
          <td><%= employeeProject.projectId %></td>
          <td><%= employeeProject.userId %></td>
          <td><%= employeeProject.createdAt %></td>
          <td><%= employeeProject.updateAt %></td>
          <td>
            <button><a href="/v1/employeeProjects/<%= employeeProject.id %>">View</a></button>
            <button><a href="/v1/employeeProjects/edit/<%= employeeProject.id %>">Edit</a></button>
            <form action="/v1/employeeProjects/<%= employeeProject.id %>?_method=DELETE" method="post">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <button class="add-employee-project-button">
      <a href="/v1/employeeProjects/create">Create New Employee Project</a>
    </button>
    <button class="back-to-menu-button"><a href="/">Back to Menu</a></button>
  </body>
</html>
